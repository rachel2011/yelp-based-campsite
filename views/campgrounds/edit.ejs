<% include ../partials/header %>

<div class="container"> 
    <div class="row">
        <h3 style="text-align: center;">Edit <%=campground.name%></h3>
            <div class="col-sm-6 col-xs-12 col-centered">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Name: </label>  
                        <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
                    </div> 
                    <div class="form-group">
                        <label>Image:</label>
                        <input class="form-control" type="text" name="campground[img]" value="<%=campground.img%>">
                    </div> 
                    <div class="form-group">
                        <label>Address:</label>
                        <input class="form-control" type="text" name="campground[address]" value="<%=campground.address%>">
                    </div>   
                    <div class="form-group">
                        <label>Description:</label>
                        <textarea class="form-control" type="text" name="campground[description]" cols="25" rows="10"><%=campground.description%></textarea>
                    </div>
                    <div class="form-group">
                        <label>Booking Fee:</label><br/>$
                        <input class="form-control" style="width: 20%; display: inline;" type="number" min="0.01" step="0.01" value="<%=campground.cost%>" name="campground[cost]"> /night
                    </div> 
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit Changes</button>
                    </div>
                </form>
                <div style="text-align: center; text-decoration: underline;">
                    <a href="/campgrounds" style="font-size: 11px; text-align: center;">Go Back</a>
                </div>
            </div>
    </div>
</div>  

<% include ../partials/footer %>